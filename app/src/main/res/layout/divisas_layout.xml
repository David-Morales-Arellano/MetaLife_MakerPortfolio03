<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_style"
    android:padding="10dp"
    android:paddingTop="15dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_style_blue"
        android:padding="12dp"
        android:text="META DIVISAS"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.11" />

    <TextView
        android:id="@+id/Title2"
        android:layout_width="320dp"
        android:layout_height="35dp"
        android:background="@drawable/text_style"
        android:padding="5dp"
        android:text="Introduzca una cantidad en euros"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/Input1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title1"
        app:layout_constraintVertical_bias="0.796" />

    <EditText
        android:id="@+id/Input1"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginTop="276dp"
        android:background="@drawable/input_style"
        android:ems="10"
        android:hint="xxx"
        android:inputType="number"
        android:paddingVertical="15dp"
        android:textAlignment="center"
        android:textColor="@color/ColorMeta3"
        android:textColorHint="@color/ColorMeta3"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Title3"
        android:layout_width="320dp"
        android:layout_height="35dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/text_style"
        android:padding="5dp"
        android:text="Cantidad en dolares"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/Text1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Text1"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginTop="436dp"
        android:background="@drawable/input_style"
        android:text="$$$"
        android:textAlignment="center"
        android:textColor="@color/ColorMeta1"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/input_style"
        android:padding="12dp"
        android:text="CONVERTIR"
        android:textColor="@color/ColorMeta3"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.885" />

</androidx.constraintlayout.widget.ConstraintLayout>